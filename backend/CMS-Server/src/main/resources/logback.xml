<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>cms.log</file>
        <encoder>
            <pattern>%logger{0} - %msg%n</pattern>
        </encoder>
        <!-- 设置无缓冲，实时写入文件 -->
        <immediateFlush>true</immediateFlush>
    </appender>

    <root level="info">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
